<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="XampleControl.MainPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    NavigationPage.HasNavigationBar="False">

    <StackLayout Spacing="2">

        <Label
            BackgroundColor="#2196F3"
            FontSize="36"
            HeightRequest="180"
            HorizontalTextAlignment="Center"
            Text="Welcome to Xample.Control"
            TextColor="White"
            VerticalTextAlignment="Center" />

        <Button Clicked="Button_Clicked01" Text="01 Animated Counter" />
        <Button Clicked="Button_Clicked02" Text="02 Fake Fab" />
        <Button Clicked="Button_Clicked03" Text="03 Fake Tabs" />
        <Button Clicked="Button_Clicked04" Text="04 Side Drawers" />
        <Button Clicked="Button_Clicked05" Text="05 Flip Card" />
        <Button Clicked="Button_Clicked06" Text="06 Grouping Carousel" />
        <Button Clicked="Button_Clicked07" Text="07 Fake Switch" />
        <Button Clicked="Button_Clicked08" Text="08 Cutout Textbox" />
        <Button Clicked="Button_Clicked09" Text="09 Auto Collapse Nav Bar" />
    </StackLayout>

</ContentPage>
